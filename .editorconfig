# http://editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{js,scss,html,css,twig,eslintrc}]
indent_style = space
indent_size = 2

# Matches the exact files either package.json or .travis.yml
[{package.json,bower.json,.travis.yml,.scss-lint.yml}]
indent_style = space
indent_size = 2
